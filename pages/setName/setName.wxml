<!--pages/setName/setName.wxml-->
<view class='wrap'>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="name-input-wrap">
      <input bindinput='onNameChange' class="name-input" name="name" placeholder="{{currentName}}" />
    </view>
    <view class="confirm-btn-wrap">
      <button class="confirm-btn" disabled="{{submitBtnDisable}}" formType="submit">确定</button>
    </view>
    </form>
</view>