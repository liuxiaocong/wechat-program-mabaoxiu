.set-name-wrap {
  display: flex;
  flex-direction: 'row';
  height: 100rpx;
  align-items: center;
  padding: 10rpx 30rpx;
}

.set-name-wrap-hover {
  opacity: 0.8;
}

.set-name-avatar-name {
  flex-grow: 1;
}

.set-name-avatar-name {
  margin-left: 40rpx;
}

.set-name-avatar-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.set-name-avatar-nav {
  font-size: 1.2em;
  color: #ddd;
}

.sign-wrap {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  right: 20rpx;
  bottom: 20rpx;
}

.sign {
  width: 60rpx;
  height: 60rpx;
}

.baby-base-info-wrap {
  display: flex;
  flex-direction: 'row';
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #eee;
  background: #fafafa;
  border-bottom: 1px solid #eee;
  margin-top: 20rpx;
}
.baby-name-relation-wrap{
  flex-grow: 1;
  display: flex;
  flex-direction: 'row'
}
.baby-base-info-wrap-hover {
  opacity: 0.8;
}

.baby-name-wrap {
  margin: 0 30rpx;
  color: #333;
}

.baby-relation-wrap {
  color: #999;
}

.baby-info-nav {
  font-size: 1.2em;
  color: #ddd;
  margin-right: 30rpx;
}


.baby-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 30rpx;
  border-radius: 20rpx;
  border: 1px solid #ddd;
  margin-bottom: 5rpx;
}
.baby-photo-info-wrap{
  display: flex;
